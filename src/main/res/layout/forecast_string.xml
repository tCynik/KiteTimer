<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/forecast_string_time"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="xx.xx xx:xx"/>
    <TextView
        android:id="@+id/forecast_string_temp"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="end"
        android:text="xx.x"/>
    <TextView
        android:id="@+id/forecast_string_wind"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="end"
        android:text="xx.x"/>
    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textSize="20sp"
        android:text="/"/>

    <TextView
        android:id="@+id/forecast_string_gust"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="xx.x"/>

    <TextView
        android:id="@+id/forecast_string_dir"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="xxx"/>
    <ImageView
        android:id="@+id/forecast_string_arrow"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>

</LinearLayout>