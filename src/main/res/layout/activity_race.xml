<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityRace"
    android:orientation="vertical"
    android:gravity="center">

    <fragment
        android:name="com.example.racertimer.ForecastFragment"
        android:id="@+id/fr_place_timer_forecast"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </fragment>

    <!-- главное размещение UI элементов -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/central_ui_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W, 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:id="@+id/space_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/wind_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_wind"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/frame_stat_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_stat_wind"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/frame_velocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_velocity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Размещение центральных элементов -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/central_params_cl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/frame_velocity"
            app:layout_constraintTop_toTopOf="@+id/frame_velocity"
            app:layout_constraintEnd_toEndOf="@+id/frame_velocity"
            app:layout_constraintStart_toStartOf="@+id/frame_velocity">

            <TextView
                android:id="@+id/min_vmg"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:gravity="end"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/race_last_signs"
                android:textSize="18sp"
                android:text="downwind"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="@id/min_vmg"
                app:layout_constraintEnd_toEndOf="@id/min_vmg"/>

            <TextView
                android:id="@+id/vmg"
                android:layout_width="145dp"
                android:layout_height="110dp"
                android:textSize="90sp"
                android:gravity="end"
                android:layout_marginEnd="105dp"
                app:layout_constraintVertical_bias="0.32"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/sidn_vmg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VMG"
                android:textColor="@color/race_secondary_signs"
                android:textSize="30sp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/vmg"
                app:layout_constraintEnd_toEndOf="@+id/min_vmg"/>

            <TextView
                android:id="@+id/max_vmg"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:gravity="end"
                app:layout_constraintVertical_bias="0.99"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/min_vmg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textColor="@color/race_last_signs"
                android:layout_marginBottom="40dp"
                android:text="upwind:"
                android:textSize="18sp"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintEnd_toEndOf="@+id/max_vmg"
                app:layout_constraintBottom_toBottomOf="@+id/max_vmg"/>

            <!-- переходим к правой части экрана -->
            <TextView
                android:id="@+id/max_velocity"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/race_secondary_signs"
                app:layout_constraintTop_toTopOf="@+id/min_vmg"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="max"
                android:layout_marginBottom="5dp"
                android:textColor="@color/race_last_signs"
                app:layout_constraintStart_toEndOf="@id/max_velocity"
                app:layout_constraintBottom_toBottomOf="@id/max_velocity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kmh"
                android:textSize="30sp"
                android:layout_marginBottom="-30dp"
                android:textColor="@color/race_secondary_signs"
                app:layout_constraintBottom_toTopOf="@id/velocity"
                app:layout_constraintStart_toStartOf="@id/max_velocity" />

            <TextView
                android:id="@+id/velocity"
                android:layout_width="115dp"
                android:layout_height="110dp"
                android:textSize="80sp"
                android:gravity="end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- блок курса -->
            <TextView
                android:id="@+id/bearing"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="@color/race_secondary_signs"
                android:textSize="28sp"
                android:layout_marginTop="25dp"
                app:layout_constraintVertical_bias="0.65"
                app:layout_constraintStart_toStartOf="@id/max_velocity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="course"
                android:textSize="16sp"
                android:textColor="@color/race_last_signs"
                android:layout_marginStart="-4dp"
                app:layout_constraintStart_toEndOf="@+id/bearing"
                app:layout_constraintTop_toTopOf="@+id/bearing"/>

            <TextView
                android:id="@+id/course_to_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/max_velocity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to wind"
                android:textSize="16sp"
                android:textColor="@color/race_last_signs"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/course_to_wind"
                app:layout_constraintStart_toStartOf="@id/course_to_wind"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wind_stat_color"
                android:text="Wind  "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="130"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_stat_velocity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_velocity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/arrow_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_direction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/line_vmg_down_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_vmg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/line_vmg_down_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_vmg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/line_vmg_up_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_vmg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/line_vmg_up_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_vmg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="wind degree"/>

        <SeekBar
            android:id="@+id/seekBar_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="720"
            android:progress="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="bearing"/>

        <SeekBar
            android:id="@+id/seekBar_bearing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="360"
            android:progress="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="velocity"/>

        <SeekBar
            android:id="@+id/seekBar_velosity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">
            <Button
                android:id="@+id/update_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="update wind dir" />
            <Switch
                android:id="@+id/mute_vmg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mute VMG"
                tools:ignore="UseSwitchCompatOrMaterialXml"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>