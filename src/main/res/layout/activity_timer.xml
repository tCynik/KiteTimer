<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTimer">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:text="time hour:minute"
        android:textSize="16dp"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center"
      android:padding="5dp"
      >

    <TextView
        android:id="@+id/timer_min_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="20"
        android:textSize="@dimen/timer_size" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">

    <Button
        android:id="@+id/but_prev_timer"
        android:layout_width="100dp"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/but_curr_timer"
        android:layout_width="100dp"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/but_next_timer"
        android:layout_width="@dimen/button_1_width"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="START" />
  </LinearLayout>

</LinearLayout>