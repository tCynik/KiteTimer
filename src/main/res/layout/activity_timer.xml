<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTimer">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:text="time hour:minute"
        android:textSize="16dp"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="20dp"
      android:layout_weight="1"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:orientation="horizontal"
      android:layout_gravity="center"
      android:paddingHorizontal="20dp"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">
      <Button
          android:id="@+id/but_plus_1sec"
          android:layout_width="40dp"
          android:layout_height="60dp"
          android:text="+1"
          android:layout_marginHorizontal="20dp"
          android:layout_marginVertical="5dp"/>
      <Button
          android:id="@+id/but_plus_5sec"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginHorizontal="20dp"
          android:text="+5"
          android:layout_marginVertical="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/timer_min_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="20"
        android:textSize="@dimen/timer_size"
        android:clickable="true"
        android:layout_weight="2"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingVertical="10dp">
      <Button
          android:id="@+id/but_minus_5sec"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginHorizontal="20dp"
          android:text="-5"
          android:layout_marginVertical="5dp"
          android:layout_gravity="center_vertical"/>
      <Button
          android:id="@+id/but_minus_1sec"
          android:layout_width="40dp"
          android:layout_height="60dp"
          android:text="-1"
          android:layout_marginHorizontal="20dp"
          android:layout_marginVertical="5dp"
          android:layout_gravity="center_vertical"/>
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="20dp"
      android:layout_weight="1"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">

    <Button
        android:id="@+id/but_prev_timer"
        android:layout_width="100dp"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"

        />
    <Button
        android:id="@+id/but_curr_timer"
        android:layout_width="100dp"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/but_next_timer"
        android:layout_width="@dimen/button_1_width"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:layout_margin="5dp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_weight="1"></LinearLayout>

</LinearLayout>